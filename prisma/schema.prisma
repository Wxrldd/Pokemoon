// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // Pas d'erreur
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  pokedollars Int      @default(3000)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teamPokemons TeamPokemon[]
}

model TeamPokemon {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  speciesName String
  nickname    String?
  level       Int      @default(5)
  currentHP   Int
  maxHP       Int
  position    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, position])
  @@index([userId])
  id        Int      @id @default(autoincrement())
  email     String
  password  String
  pseudo    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
